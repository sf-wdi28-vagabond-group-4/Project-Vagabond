<div class="col-md-4 col-md-offset-4">
  <br>
    <% if flash[:error] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:error] %>
      </div>
    <% end %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Reset You Password</h3>
    </div>
    <div class="panel-body">
      <%= form_for @user, html: { multipart: true } do |f| %>
        <div class="form-field">
          <%= f.label "Type Your New Password" %>
          <%= f.password_field :password, required: true, class: "password-reset", placeholder: "Password" %>
        </div>
        <%= f.submit "Update" %>
      <% end %>
    </div>
  </div>
</div>
