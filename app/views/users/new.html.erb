<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Sign Up</h3>
    </div>
    <div class="panel-body">


      <%= form_for @user, html: { multipart: true } do |f| %>
      <!-- <div>
        <%= f.file_field :image, placeholder: "Image" %>
      </div> -->
        
        <div>
          <%= f.text_field :first_name, required: true, class: "fname", placeholder: "First Name" %>
        </div>
        <div>
          <%= f.text_field :last_name, required: true, class: "lname", placeholder: "Last Name" %>
        </div>
        <div>
          <%= f.text_field :email, required: true, class: "email", placeholder: "Email" %>
        </div>
        <div>
          <%= f.password_field :password, required: true, class: "password", placeholder: "Password" %>
        </div>
        <%= f.submit "Sign Up" %>
      <% end %>
    </div>
  </div>
</div>
