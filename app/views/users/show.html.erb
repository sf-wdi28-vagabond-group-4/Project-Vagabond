<div class="container-show">
  <div class="col-md-12">
    <div class="row" id="profile-row">
      <br>
      <div class="col-md-3 col-xs-12">
        <%= image_tag @user.image.url(:medium) %><br>
          <ul>
            <li>
              Name: <%= @user.first_name %> <%= @user.last_name %>
            </li>
            <li>
              Joined on: <%= @user.created_at.strftime("%m/%d/%Y") %>
            </li>
            <li>
              Current City: <%= @user.current_city %>
            </li>
          </ul>
          <%= link_to "Edit Profile", edit_user_path(@user) %>
      </div>

      <div class="col-md-6 col-xs-12" id="user-post-profile">
        <% @user.posts.each do |p| %>
        <div class="panel panel-default">
          <div class="panel-body">

            <div class='row'>

              <div class="col-md-9 col-xs-12">
                <ul class="list-group form-inline">
                  <li class="list-group-item">
                    <h4>Title:</h4>
                     <%= p.title %>
                  </li>

                  <li class="list-group-item">
                    <h4>Content:</h4>
                    <%= p.content %>
                  </li>

                  <li class="list-group-item">
                    <h4>Date Posted:</h4>
                    <%= p.created_at %>
                  </li>
                </ul>
                <%= link_to "Edit", edit_city_post_path(p.city, p), class: "btn btn-default"%>
                <%= link_to "Delete", city_post_path(p.city, p), method: :delete, class: "btn btn-default"%>
              </div>
            </div>


          </div>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
