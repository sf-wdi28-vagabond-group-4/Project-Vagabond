<div class="city-show-banner city-container">
    <%= image_tag @city.city_picture, class: 'city-show-header-image img-responsive' %>
</div>
<div class="city-show-container">
  <h3 class="city-show-header-title"><%= @city.city_name %></h3>

  <div>
    <%= form_for [@city, @post] do |f| %>
      <div>
        <%= f.text_field :title, placeholder: "Title" %>
      </div>
      <div>
        <%= f.text_area :content, placeholder: "Content" %>
      </div>
      <%= f.submit "Save Post" %>
    <% end %>
  </div>

  <!-- Creates notice if successful post(post.contoller.create) -->
  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= paginate @posts %>
  <% @posts.each do |p| %>
    <div class="container">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class='row'>
            <div class="col-md-4 col-xs-12">
               <%= image_tag("default_image.png", class: "img-responsive") %>
            </div>

            <div class="col-md-8 col-xs-12">
              <ul class="list-group form-inline">
                <li class="list-group-item">
                  <strong> <%= p.title %></strong><span class="pull-right"><%= p.created_at.strftime("%m/%d/%Y") %></span>
                </li>

                <li class="list-group-item">

                <span class="show-content">  <%=h truncate(p.content, :length => 1000) %></span>
                <%= link_to "See More", city_post_path(p.city, p), class:"btn btn-primary"%>
                </li>

              </ul>
              <%= link_to "Edit", edit_city_post_path(p.city, p), class: "btn btn-default btn-primary"%>
              <%= link_to "Delete", city_post_path(p.city, p), method: :delete, class: "btn btn-default btn-danger"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @posts %>
</div>
