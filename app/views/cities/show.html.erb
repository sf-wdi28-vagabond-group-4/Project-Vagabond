

<%= link_to "Back to Cities", cities_path %>
<div class="jumbotron-show">
  <div class="container-show">
    <h1><%= @city.city_name %></h1>

      <%= image_tag @city.city_picture, class: 'img-responsive' %>

  </div>
</div>

<div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-body">

          <div class='row'>
            <div class="col-md-3 col-xs-12 thumbnail">
               <#%= image_tag @user.profile_pic %>
            </div>

            <div class="col-md-9 col-xs-12">
              <ul class="list-group form-inline">
                <li class="list-group-item">
                  <h4 class='inline-header'>Title:</h4>
                   <#%= @post.title %>
                </li>

                <li class="list-group-item">
                  <h4 class='inline-header'>Content:</h4>
                  <#%= @post.content %>
                </li>

                <li class="list-group-item">
                  <h4 class='inline-header'>Date Posted:</h4>
                  <#%= @post.created_at %>
                </li>
              </ul>
              <button class='btn btn-info'>EDIT POST</button>
              <button class='btn btn-danger'>DELETE POST</button>
            </div>
          </div>


        </div>
      </div>
    </div>

  <h3><%= @city.city_name %></h3>

  <div>
    <%= form_for [@city, @post] do |f| %>
      <div>
        <%= f.text_field :title, placeholder: "Title" %>
      </div>
      <div>
        <%= f.text_area :content, placeholder: "Content" %>
      </div>
      <%= f.submit "Save Post" %>
    <% end %>
  </div>

  <div>
    <h4><%=  @city.city_name %> Posts</h4>
    <ul>
      <% @city.posts.each do |p| %>
          <li><strong><%= p.title %></strong>
              <p>Content: <%= p.content %></p>
              <p>User ID: <%= p.user_id %></p>
              <p>Created At: <%= p.created_at %></p>
          </li>
      <% end %>
    </ul>
  </div>

</div>
