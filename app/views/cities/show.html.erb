<div>
  <%= image_tag @city.city_picture, class: 'img-responsive' %>
</div>
<div class="city-show-container">
  <h1 class="city-show-header-title"><%= @city.city_name %></h1>

  <div class="col-md-6 col-md-offset-3">
      <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:error] %>
        </div>
      <% end %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add A Post</h3>
      </div>
      <div class="panel-body">
        <%= form_for [@city, @post] do |f| %>
          <div class="form-field">
            <%= f.text_field :title, required: true, placeholder: "Title" %>
          </div>
          <div class="form-field">
            <%= f.text_area :content, required: true, placeholder: "Content" %>
          </div>
          <div class="form-field">
          <%= f.submit "Post", class: "btn btn-lg btn-success city-show-post-button"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Creates notice if successful post(post.contoller.create) -->
  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= paginate @posts %>
  <% @posts.each do |p| %>
    <div class="container">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class='row'>
            <div class="col-md-4 col-xs-12">
               <%= image_tag("default_image.png", class: "img-responsive") %>
            </div>

            <div class="col-md-8 col-xs-12">
              <ul class="list-group form-inline">
                <li class="list-group-item">
                  <strong> <%= p.title %></strong><span class="pull-right"><small>posted <%= time_ago_in_words(p.created_at) %> ago</small></span>
                </li>

                <li class="list-group-item">

                <span class="show-content">  <%=h truncate(p.content, :length => 1000) %></span>
                <%= link_to "See More", city_post_path(p.city, p), class:"btn btn-primary"%>
                </li>

              </ul>
              <%= link_to "Edit", edit_city_post_path(p.city, p), class: "btn btn-default btn-primary"%>
              <%= link_to "Delete", city_post_path(p.city, p), method: :delete, class: "btn btn-default btn-danger"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @posts %>
</div>
